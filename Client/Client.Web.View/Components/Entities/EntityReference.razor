@using MudBlazor
@using Protocol.Models;

@if (Reference.IsEmpty())
{
    <MudLink Disabled=true>
        -
    </MudLink>
}
else
{
    <MudLink OnClick="e => OnClick(Reference)">
        @Reference
    </MudLink>
}

@code {
    [Parameter]
    [EditorRequired]
    public IReference Reference { get; set; }

    [Parameter]
    [EditorRequired]
    public Func<IReference, Task> OnClick { get; set; }

    string style => "";
}
